<div id="top"></div>

{{!-- **** Welcome Section **** --}}
<div id="welcome-section">
	<div class="container">
		{{!-- Opening Text --}}
		<ScrollReveal
			@tagName="h1"
			@elementId="opening-text"
			class="load-hidden"
			@distance="30px"
			@duration={{1000}}
			@reset={{true}}
			@delay={{500}}
			@origin={{@leftToBottom}}
		>
			Hi, my name is <span class="text-color-main">Michael Serna</span>.
			<span class="block">I love all things web.</span>
		</ScrollReveal>
		{{!-- /END Opening Text --}}

		{{!-- Opening Call To Action --}}
		<ScrollReveal
			@tagName="p"
			@elementId="opening-paragraph"
			class="load-hidden"
			@distance="30px"
			@duration={{1000}}
			@reset={{true}}
			@delay={{1000}}
			@origin={{@leftToBottom}}
		>
			<a class="cta-btn cta-btn--hero" href="#about" {{jumpscroll}}>Learn more</a>
		</ScrollReveal>
	</div>
</div>
{{!-- /END Welcome Section --}}


{{!-- **** About Section **** --}}
<section id="about">
	<div class="container">
		<ScrollReveal
			@tagName="h2"
			class="section-title"
			@duration={{1000}}
			@delay={{300}}
		>
			About me
		</ScrollReveal>
		
		<div class="row about-wrapper">
			<div class="col-md-6 col-sm-12">
				<ScrollReveal
					class="about-wrapper__image"
					@distance="30px"
					@duration={{1000}}
				>
					{{!-- Profile image: change path: assets/images/yourpic.jpg --}}
					<img
						class="img-fluid rounded shadow-lg"
						height="auto"
						width="300px"
						src="assets/images/profile.jpg"
						alt="Profile"
					>
					{{!-- /END Profile image --}}
				</ScrollReveal>
			</div>
			<div class="col-md-6 col-sm-12">
				<ScrollReveal
					class="about-wrapper__info"
					@distance="30px"
					@duration={{1000}}
					@delay={{1000}}
					@origin={{@leftToBottom}}
				>
					{{!-- 
					Profile about-text: I recommend to have no more than 4 blocks 
					of text
					--}}
					<p class="mb-8 text-left">
						I'm a professional Front End Software Engineer and passionate 
						about building great sites and tools and continually learning
						and refining my skills.
					</p>
					<p class="mb-8 text-left">
						I have helped my clients create their first websites, 
						coaching them through the entire process, from defining the 
						website's purpose, laying out a site architecture, storyboarding, 
						designing, and developing a responsive, mobile-first site, to give 
						their first online presence a solid boost.
					</p>
					<p class="mb-8 text-left">
						Lately, I have shifted from developing websites to developing web 
						applications that are scalable and composed of reusable components, 
						primarily in Ember.js and Node.js, although I am also continually 
						exploring other front end frameworks and solutions.
					</p>
					<p class="mb-8 text-left">
						When I am not writing code or exploring new things in development, I love 
						to spend time with my wife and five kids. We enjoy anything outdoors, 
						theme parks, and watching Dodgers baseball.

						{{!-- 
						Resume Link: Put your external link for resume.
						If you want you can comment this link
						--}}
						{{!-- <a rel="noopener noreferrer" target="_blank" class="mt-8 cta-btn cta-btn--resume" href="#!">
							View Resume
						</a> --}}
						{{!-- /END Resume link --}}
					</p>
					{{!-- /END Profile about text  --}}
				</ScrollReveal>
			</div>
		</div>
	</div>
</section>
{{!-- /END About Section --}}


{{!-- **** Projects Section **** --}}
<section id="projects">
	<div class="container">
		{{!-- Personal projects --}}
		<div class="project-wrapper">
			<ScrollReveal
				@tagName="h2"
				class="section-title dark-blue-text"
				@duration={{1000}}
				@delay={{300}}
			>
				Projects
			</ScrollReveal>
			
			{{#each this.projects as |project|}}
				{{!-- Each .row is a project block --}}
				<div class="row">
					<div class="col-lg-4 col-sm-12">
						<ScrollReveal
							class="project-wrapper__text"
							@distance="30px"
							@duration={{1000}}
							@delay={{500}}
							@origin={{@leftToBottom}}
						>
							{{!-- 1) project title --}}
							<h3 class="project-wrapper__text-title">{{project.name}}</h3>
							
							{{#if project.description}}
								{{!-- 2) project info --}}
								<div>
									{{#each project.description as |paragraph|}}
										<p class="mb-4">
											{{paragraph}}
										</p>
									{{/each}}
								</div>
							{{/if}}

							{{#if project.url}}
								{{!-- 3) project url  --}}
								<a rel="noopener noreferrer" target="_blank" class="cta-btn cta-btn--hero" href={{project.url}}>
									See Live
								</a>
							{{/if}}

							{{#if project.repo}}
								{{!-- 4) project repository url --}}
								<a rel="noopener noreferrer" target="_blank" class="cta-btn text-color-main" href={{project.repo}}>
									Source Code
								</a>
							{{/if}}
						</ScrollReveal>
					</div>
					<div class="col-lg-8 col-sm-12">
						<ScrollReveal
							class="project-wrapper__image"
							@distance="30px"
							@duration={{1000}}
							@delay={{1000}}
							@origin={{@rightToBottom}}
						>
							{{#if project.url}}
								{{!-- 1) project url --}}
								<a href={{project.url}} rel="noopener noreferrer" target="_blank">
									<TiltElement
										class="thumbnail rounded"
										@max={{7}}
										@glare={{true}}
										@max-glare={{0.5}}
									>
										{{!-- 2) project image path  --}}
										<img class="img-fluid" src={{project.thumbnail.image}} alt={{project.thumbnail.alt}}>
									</TiltElement>
								</a>
							{{else}}
								<TiltElement
									class="thumbnail rounded"
									@max={{7}}
									@glare={{true}}
									@max-glare={{0.5}}
								>
									{{!-- 2) project image path  --}}
									<img class="img-fluid" src={{project.thumbnail.image}} alt={{project.thumbnail.alt}}>
								</TiltElement>
							{{/if}}
						</ScrollReveal>
					</div>
				</div>
				{{!-- /END Project block --}}
			{{/each}}
		</div>
		{{!-- /END Personal projects --}}
	</div>
</section>
{{!-- /END Projects Section --}}


{{!-- **** Contact Section **** --}}
<section id="contact">
	<div class="container">
		<ScrollReveal
			@tagName="h2"
			class="section-title"
			@duration={{1000}}
			@delay={{300}}
		>
			Contact
		</ScrollReveal>
		<ScrollReveal
			class="contact-wrapper"
			@distance="30px"
			@duration={{1000}}
			@delay={{800}}
		>
			{{!-- 1) Contact Call To Action: change if necessary --}}
			<p class="mb-4 contact-wrapper__text">
				Have a project you'd like to discuss with me?
			</p>
			{{!-- 2) Contact mail link: change to your work email & change text if necessary --}}
			<a
				rel="noopener noreferrer"
				target="_blank"
				class="cta-btn cta-btn--resume"
				href="mailto:michael@sernadesigns.com"
			>
				Let's Chat!
			</a>
		</ScrollReveal>
	</div>
</section>
{{!-- /END Contact Section --}}


{{!-- **** Footer Section **** --}}
<footer class="footer navbar-static-bottom">
	<div class="container">
		<a class="back-to-top" href="#top" {{jumpscroll}}>
			<span class="sr-only">Back to top</span>
			{{fa-icon "angle-up" class="pointer-events-none" prefix="fas" size="2x"}}
		</a>

		{{#if socials}}
			{{!-- Social Links --}}
			<div class="social-links">
				{{#each this.socials as |social|}}
					<a href={{social.url}} rel="noopener noreferrer" target="_blank" aria-label="Follow me on {{social.name}}">
						{{fa-icon social.name class="fa-inverse pointer-events-none" prefix="fab" aria-label=social.name}}
					</a>
				{{/each}}
			</div>
		{{!-- /END Social Links --}}
		{{/if}}

		<hr>

		<p class="footer__text">
			&copy; 2011-2019 SernaDesigns Web Development
		</p>
	</div>
</footer>
{{!-- /END Footer Section --}}
