<div id="top"></div>

{{!-- **** Welcome Section **** --}}
<div id="welcome-section">
	<div class="container">
		{{!-- Opening Text --}}
		{{#scroll-reveal
			tagName="h1"
			elementId="opening-text"
			class="load-hidden"
			distance="30px"
			duration=1000
			reset=true
			delay=500
			origin=(if (not (media "isDesktop")) "left" "bottom")
		}}
			Hi, my name is <span class="text-color-main">Michael Serna</span>.
			<span class="block">I love all things web.</span>
		{{/scroll-reveal}}
		{{!-- /END Opening Text --}}

		{{!-- Opening Call To Action --}}
		{{#scroll-reveal
			tagName="p"
			elementId="opening-paragraph"
			class="load-hidden"
			distance="30px"
			duration=1000
			reset=true
			delay=1000
			origin=(if (not (media "isDesktop")) "left" "bottom")
		}}
			{{jump-scroll
				class="cta-btn cta-btn--hero"
				href="#about"
				text="Learn more"
			}}
		{{/scroll-reveal}}
	</div>
</div>
{{!-- /END Welcome Section --}}


{{!-- **** About Section **** --}}
<section id="about">
	<div class="container">
		{{#scroll-reveal
			tagName="h2"
			class="section-title"
			duration=1000
			delay=300
		}}
			About me
		{{/scroll-reveal}}
		
		<div class="row about-wrapper">
			<div class="col-md-6 col-sm-12">
				{{#scroll-reveal
					class="about-wrapper__image"
					distance="30px"
					duration=1000
				}}
					{{!-- Profile image: change path: assets/images/yourpic.jpg --}}
					<img
						class="img-fluid rounded shadow-lg"
						height="auto"
						width="300px"
						src="assets/images/profile.jpg"
						alt="Profile Image"
					>
					{{!-- /END Profile image --}}
				{{/scroll-reveal}}
			</div>
			<div class="col-md-6 col-sm-12">
				{{#scroll-reveal
					class="about-wrapper__info"
					distance="30px"
					duration=1000
					delay=1000
					origin=(if (not (media "isDesktop")) "left" "bottom")
				}}
					{{!-- 
					Profile about-text: I recommend to have no more than 4 blocks 
					of text
					--}}
					<p class="mb-8 text-left">
						I'm a professional Front End Software Engineer and passionate 
						about building great sites and tools and continually learning
						and refining my skills.
					</p>
					<p class="mb-8 text-left">
						I have helped my clients create their first websites, 
						coaching them through the entire process, from defining the 
						website's purpose, laying out a site architecture, storyboarding, 
						designing, and developing a responsive, mobile-first site, to give 
						their first online presence a solid boost.
					</p>
					<p class="mb-8 text-left">
						Lately, I have shifted from developing websites to developing web 
						applications that are scalable and composed of reusable components, 
						primarily in Ember.js and Node.js, although I am also continually 
						exploring other front end frameworks and solutions.
					</p>
					<p class="mb-8 text-left">
						When I am not writing code or exploring new things in development, I love 
						to spend time with my wife and five kids. We enjoy anything outdoors, 
						theme parks, and watching Dodgers baseball.

						{{!-- 
						Resume Link: Put your external link for resume.
						If you want you can comment this link
						--}}
						{{!-- <a rel="noopener" target="_blank" class="mt-8 cta-btn cta-btn--resume" href="#!">
							View Resume
						</a> --}}
						{{!-- /END Resume link --}}
					</p>
					{{!-- /END Profile about text  --}}
				{{/scroll-reveal}}
			</div>
		</div>
	</div>
</section>
{{!-- /END About Section --}}


{{!-- **** Projects Section **** --}}
<section id="projects">
	<div class="container">
		{{!-- Personal projects --}}
		<div class="project-wrapper">
			{{#scroll-reveal
				tagName="h2"
				class="section-title dark-blue-text"
				duration=1000
				delay=300
			}}
				Projects
			{{/scroll-reveal}}
			{{!-- Each .row is a project block --}}
			<div class="row">
				<div class="col-lg-4 col-sm-12">
					{{#scroll-reveal
						class="project-wrapper__text"
						distance="30px"
						duration=1000
						delay=500
						origin=(if (not (media "isDesktop")) "left" "bottom")
					}}
						{{!-- 1) project title --}}
						<h3 class="project-wrapper__text-title">Perryman Law Firm</h3>
						{{!-- 2) project info --}}
						<div>
							<p class="mb-4">
								A responsive website for the Perryman Law Firm in Temecula, CA.
							</p>
							<p class="mb-4">
								I created this also in WordPress with a custom theme that I designed
								as a boilerplate for all of my web projects.
							</p>
						</div>
						{{!-- 3) project url  --}}
						<a rel="noopener" target="_blank" class="cta-btn cta-btn--hero" href="http://perrymanlawfirm.com/">
							See Live
						</a>
						{{!-- 4) project repository url --}}
						{{!-- <a rel="noopener" target="_blank" class="cta-btn text-color-main" href="#!">
							Source Code
						</a> --}}
					{{/scroll-reveal}}
				</div>
				<div class="col-lg-8 col-sm-12">
					{{#scroll-reveal
						class="project-wrapper__image"
						distance="30px"
						duration=1000
						delay=1000
						origin=(if (not (media "isDesktop")) "right" "bottom")
					}}
						{{!-- 1) project url --}}
						<a href="http://perrymanlawfirm.com/" rel="noopener" target="_blank">
							{{#tilt-element
								class="thumbnail rounded"
								max=7
								glare=true
								max-glare=0.5
							}}
								{{!-- 2) project image path  --}}
								<img class="img-fluid" src="assets/images/perryman-devices-1366x767.png" alt="Perryman Law Firm website displayed on various devices">
							{{/tilt-element}}
						</a>
					{{/scroll-reveal}}
				</div>
			</div>
			{{!-- /END Project block --}}

			{{!-- Each .row is a project block --}}
			<div class="row">
				<div class="col-lg-4 col-sm-12">
					{{#scroll-reveal
						class="project-wrapper__text"
						distance="30px"
						duration=1000
						delay=500
						origin=(if (not (media "isDesktop")) "left" "bottom")
					}}
						{{!-- 1) project title --}}
						<h3 class="project-wrapper__text-title">Integrity Transportation</h3>
						{{!-- 2) project info --}}
						<div>
							<p class="mb-4">
								A responsive website for Integrity Transportation Service in Murrieta, CA.
							</p>
							<p class="mb-4">
								I created this in WordPress with a custom theme that I designed
								as a boilerplate for all of my web projects.
							</p>
						</div>
						{{!-- 3) project url  --}}
						{{!-- <a rel="noopener" target="_blank" class="cta-btn cta-btn--hero" href="#!">
							See Live
						</a> --}}
						{{!-- 4) project repository url --}}
						{{!-- <a rel="noopener" target="_blank" class="cta-btn text-color-main" href="#!">
							Source Code
						</a> --}}
					{{/scroll-reveal}}
				</div>
				<div class="col-lg-8 col-sm-12">
					{{#scroll-reveal
						class="project-wrapper__image"
						distance="30px"
						duration=1000
						delay=1000
						origin=(if (not (media "isDesktop")) "right" "bottom")
					}}
						{{!-- 1) project url --}}
						{{!-- <a href="#!" rel="noopener" target="_blank"> --}}
						{{#tilt-element
							class="thumbnail rounded"
							max=7
							glare=true
							max-glare=0.5
						}}
							{{!-- 2) project image path  --}}
							<img class="img-fluid" src="assets/images/integrity-devices-1366x767.png" alt="Integrity Transportation website displayed on various devices">
						{{/tilt-element}}
						{{!-- </a> --}}
					{{/scroll-reveal}}
				</div>
			</div>
			{{!-- /END Project block --}}
		</div>
		{{!-- /END Personal projects --}}
	</div>
</section>
{{!-- /END Projects Section --}}


